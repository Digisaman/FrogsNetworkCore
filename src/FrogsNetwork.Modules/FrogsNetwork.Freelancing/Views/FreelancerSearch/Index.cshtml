@model FrogsNetwork.Freelancing.ViewModels.FreelancerSearchViewModel


@{
    ViewLayout = "Layout__Main";
}




<form asp-controller="FreelancerSearch" asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal no-multisubmit">
    <h1>@T["Freelancer Search"]</h1>
    <p>@T["Use the form below to search for Freelancer."]</p>

    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <fieldset>
                        <legend>@T["Location Information"]</legend>
                        <div>
                            <label for="country">@T["Country:"]</label>
                            <br />
                            @Html.DropDownListFor(m => m.CountryId, Model.Countries, "Please select", new { @class = "form-control", onchange = "document.forms[0].submit();" })
                        </div>
                        <div>
                            <label for="region">@T["Region:"]</label>
                            <br />
                            @Html.DropDownListFor(m => m.RegionId, Model.Regions, "Please select", new { @class = "form-control", onchange = "document.forms[0].submit();" })
                        </div>
                        <div>
                            <label for="city">@T["City:"]</label>
                            <br />
                            @Html.DropDownListFor(m => m.CityId, Model.Cities, "Please select", new {@class = "form-control"})
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <fieldset>
                        <legend>@T["Expertise :"]</legend>

                        <label>Select First Expertise Level :</label>
                        <br />
                        @Html.ListBoxFor(m => m.ExpertiseFirstIds, Model.ExpertiseFirst, new { @class = "form-control", onchange = "document.forms[0].submit();" })
                        <br />

                        <label>Select Second Expertise Level :</label>
                        <br />
                        @Html.ListBoxFor(m => m.ExpertiseSecondIds, Model.ExpertiseSecond, new { @class = "form-control" })
                        <br />
                    </fieldset>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <fieldset>
                        <legend>@T["Services :"]</legend>

                        <label>Select First Expertise Level :</label>
                        <br />
                        @Html.ListBoxFor(m => m.ServicesFirstIds, Model.ServicesFirst, new { @class = "form-control",  onchange = "document.forms[0].submit();" })
                        <br />

                        <label>Select Second Expertise Level :</label>
                        <br />
                        @Html.ListBoxFor(m => m.ServicesSecondIds, Model.ServicesSecond, new { @class = "form-control" })
                        <br />
                    </fieldset>

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button class="btn btn-primary" type="submit">@T["Save"]</button>
                    <br />
                    <button class="btn btn-primary" formaction="/FreelancerSearch/Index" type="submit">@T["Search Freelancers"]</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="panel-body">
                <table id="assets-data-table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>City</th>
                            <th>Region</th>
                            <th>Country</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    @foreach (var entry in Model.Freelancers)
                    {
                        <tr>
                            <td>
                                @entry.FirstName
                            </td>
                            <td>
                                @entry.LastName
                            </td>
                            <td>
                                @entry.City
                            </td>
                            <td>
                                @entry.Region
                            </td>
                            <td>
                                @entry.Country
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Index", "FreelancerDetail", new { entry.Id }, null)
                            </td>
                        </tr>
                    }
                </table>

            </div>
        </div>
        <br/>
        <br />
    </div>

  
</form>