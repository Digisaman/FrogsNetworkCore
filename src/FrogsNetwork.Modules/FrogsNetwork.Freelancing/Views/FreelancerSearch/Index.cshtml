@model FrogsNetwork.Freelancing.ViewModels.FreelancerSearchViewModel


@{
    ViewLayout = "Layout__Main";
}




<form asp-controller="FreelancerSearch" asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal no-multisubmit">
    <h1>@T["Freelancer Search"]</h1>
    <p>@T["Use the form below to search for Freelancer."]</p>

    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <fieldset>
                        <legend>@T["Location Information"]</legend>
                        <div>
                            <label for="country">@T["Country:"]</label>
                            <br />
                            @Html.DropDownListFor(m => m.CountryId, Model.Countries, "Please select", new { @class = "form-control", onchange = "document.forms[0].submit();" })
                        </div>
                        <div>
                            <label for="region">@T["Region:"]</label>
                            <br />
                            @Html.DropDownListFor(m => m.RegionId, Model.Regions, "Please select", new { @class = "form-control", onchange = "document.forms[0].submit();" })
                        </div>
                        <div>
                            <label for="city">@T["City:"]</label>
                            <br />
                            @Html.DropDownListFor(m => m.CityId, Model.Cities, "Please select", new {@class = "form-control"})
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <fieldset>
                        <legend>@T["Expertise :"]</legend>

                        <label>Select First Expertise Level :</label>
                        <br />
                        @Html.ListBoxFor(m => m.ExpertiseFirstIds, Model.ExpertiseFirst, new { @class = "form-control", onchange = "document.forms[0].submit();" })
                        <br />

                        <label>Select Second Expertise Level :</label>
                        <br />
                        @Html.ListBoxFor(m => m.ExpertiseSecondIds, Model.ExpertiseSecond, new { @class = "form-control" })
                        <br />
                    </fieldset>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <fieldset>
                        <legend>@T["Services :"]</legend>

                        <label>Select First Expertise Level :</label>
                        <br />
                        @Html.ListBoxFor(m => m.ServicesFirstIds, Model.ServicesFirst, new { @class = "form-control",  onchange = "document.forms[0].submit();" })
                        <br />

                        <label>Select Second Expertise Level :</label>
                        <br />
                        @Html.ListBoxFor(m => m.ServicesSecondIds, Model.ServicesSecond, new { @class = "form-control" })
                        <br />
                    </fieldset>

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button class="btn btn-primary" type="submit">@T["Save"]</button>
                    <br />
                    <button class="btn btn-primary" formaction="/FreelancerSearch/Index" type="submit">@T["Search Freelancers"]</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="panel-body">
                <table id="assets-data-table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>City</th>
                            <th>Region</th>
                            <th>Country</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    @foreach (var entry in Model.Freelancers)
                    {
                        <tr>
                            <td>
                                @entry.FirstName
                            </td>
                            <td>
                                @entry.LastName
                            </td>
                            <td>
                                @entry.City
                            </td>
                            <td>
                                @entry.Region
                            </td>
                            <td>
                                @entry.Country
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Index", "FreelancerDetail", new { entry.Id }, null)
                            </td>
                        </tr>
                    }
                </table>

            </div>
        </div>
    </div>


    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAW1SgI7RCtbjx3t5yUIfjiDTW6fvn50OA"></script>
    <script>
        $(function () {
            var markers = [];

            var marker = {};

            marker["lat"] = '@Model.Lat';
            marker["lng"] = '@Model.Long';

            markers.push(marker);


            //call Map function with all markers passed as list of arrays
            initializeMap(markers);


            function initializeMap(markers) {
                //you can check your marker data in console
                console.log(markers);
                //Create Google map options
                var GoogleMapOptions = {
                    center: new google.maps.LatLng(markers[0].lat, markers[0].lng),
                    zoom: 6,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                };


                //create a variable of InfoWindow type to show data on clicking map icon
                var infoWindow = new google.maps.InfoWindow();
                var map = new google.maps.Map(document.getElementById("MapDiv"), GoogleMapOptions);


                //loop through each marker data
                for (i = 0; i < markers.length; i++) {
                    var data = markers[i]
                    //set lat long of current marker
                    var myLatlng = new google.maps.LatLng(data.lat, data.lng);

                    var marker = new google.maps.Marker({
                        position: myLatlng,
                        map: map,
                        title: data.title,
                        draggable: false
                    });

                    (function (marker, data) {
                        //add a on marker click event
                        google.maps.event.addListener(marker, "click", function (e) {
                            //show description
                            infoWindow.setContent(data.description);
                            infoWindow.open(map, marker);
        @*@Model.Lat = evt.latLng.lat().toFixed(6);
                                @Model.Long = evt.latLng.lng().toFixed(6);*@
                                                });

        @* google.maps.event.addListener(marker, 'dragend', function (evt) {
                            @Model.Lat = evt.latLng.lat().toFixed(6);
                            @Model.Long = evt.latLng.lng().toFixed(6);

                            map.panTo(evt.latLng);
                            });*@
                                            })(marker, data);
                }
            }
        });
    </script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <link href="https://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            if ($("#ExpertiseSecondIds option").length > 1) {
                $("#ExpertiseSecondIds").removeAttr("disabled");
            }
            if ($("#ServicesSecondIds option").length > 1) {
                $("#ServicesSecondIds").removeAttr("disabled");
            }
            $('.listbox').multiselect();
        });
    </script>

    <script type="text/javascript">
        $(function () {
            if ($("#RegionId option").length > 1) {
                $("#RegionId").removeAttr("disabled");
            }

            if ($("#CityId option").length > 1) {
                $("#CityId").removeAttr("disabled");
            }


        }
                                        });
    </script>
</form>